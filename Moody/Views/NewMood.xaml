<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moody.Views.NewMood" Title="Add a new mood">
    <ContentPage.Resources>
            <ResourceDictionary>
                 <Style TargetType=":Entry">
                <Setter Property="WidthRequest" Value="300" />
            </Style>
            </ResourceDictionary>
        </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Pick your mood" FontSize="Large" HorizontalTextAlignment="Center" Margin="0,30,15,0"/>
                <StackLayout Margin="45,10,45,0">
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="30" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Row="0" Grid.Column="1">
                            <ImageButton Source="mood-happy.png" HeightRequest="60" WidthRequest="60" />
                            <Label Text="Happy" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Grid.Row="0" Grid.Column="3">
                            <ImageButton Source="mood-sad.png" HeightRequest="60" WidthRequest="60" />
                            <Label Text="Sad" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Grid.Row="0" Grid.Column="5">
                            <ImageButton Source="mood-angry.png" HeightRequest="60" WidthRequest="60" />
                            <Label Text="Angry" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="1">
                            <ImageButton Source="mood-sick.png" HeightRequest="60" WidthRequest="60" />
                            <Label Text="Sick" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="3">
                            <ImageButton Source="mood-irritated.png" HeightRequest="60" WidthRequest="60" />
                            <Label Text="Irritated" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="5">
                            <ImageButton Source="mood-bleh.png" HeightRequest="60" WidthRequest="60" />
                            <Label Text="Bleh" HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </StackLayout>
            <StackLayout Margin="0,100,0,0">
                <Label Text="What happenend today?" FontSize="Large" HorizontalTextAlignment="Center" />
                <Entry PlaceholderColor="Gray" Placeholder="What is up?" HeightRequest="40" Margin="0,15,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Button Text="Add mood" HeightRequest="40" WidthRequest="100" Margin="0,20,0,0" TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" BackgroundColor="#ffd200"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>